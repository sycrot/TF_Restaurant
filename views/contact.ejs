<%- include('inc/page-header') -%>
	
	
		<div class="gtco-section">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-12">
					<div class="col-md-6 animate-box">
						<%- include('inc/content/alerts') -%> 
					<h3>Entre em Contato</h3>
					<form action="/contacts" method="post">
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="name">Nome</label>
								<input type="text" id="name" class="form-control" name="name" placeholder="Seu nome" value="<%= body.name %>">
							</div>
							
						</div>

						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="email">E-mail</label>
								<input type="text" id="email" class="form-control" name="email" placeholder="Seu endereço de e-mail" value="<%= body.email %>">
							</div>
						</div>
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="message">Mensagem</label>
								<textarea name="message" id="message" cols="30" rows="10" name="message" class="form-control" placeholder="Escreve alguma coisa"><%= body.message %></textarea>
							</div>
						</div>
						<div class="form-group">
							<input type="submit" value="Enviar" class="btn btn-primary">
						</div>

					</form>		
				</div>
				<div class="col-md-5 col-md-push-1 animate-box">
					
					<div class="gtco-contact-info">
						<h3>Informações de Contato</h3>
						<ul>
							<li class="address">Avenida, R. Lego Lego, 123 - 12ª andar - Centro, São Lego do Logo - MA, 65420-000</li>
							<li class="phone"><a href="tel://99981320253">(99) 98132 0253</a></li>
							<li class="email"><a href="mailto:thiagofarias99@hotmail.com">thiagofarias99@hotmail.com</a></li>
							<li class="icon-github"><a href="https://github.com/sycrow">Thiago Farias</a></li>
						</ul>
					</div>


				</div>
				</div>
			</div>
		</div>
		</div>

<%- include('inc/page-footer') -%>

